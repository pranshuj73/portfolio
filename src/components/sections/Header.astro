---
import { Image } from 'astro:assets';
import { Separator } from "@/components/ui/separator";
import Socials from "@/components/socials.astro";
import Navbar from './Navbar';

const { active } = Astro.props;
---

<section class="flex flex-wrap items-center gap-4 w-full mb-2">
    <Image class="rounded-full h-20 w-20 border-white/50 border-2 border-dashed p-1" src={"/pfp.jpg"} width="800" height="800" alt="Pranshu Jha" />
    <div class="flex-1 min-w-[300px]">
        <h1 class="text-2xl">Pranshu Jha</h1>
        <p class="font-semibold">Full-Stack Developer Crafting Unique Digital Experiences.</p>
    </div>
    <Socials class="self-end hidden md:block" />
</section>

<Socials class="block md:hidden -mb-2" />

<Separator className="my-4 h-0.5 rounded-full" />

<Navbar activeTab={active} client:load transition:persist />